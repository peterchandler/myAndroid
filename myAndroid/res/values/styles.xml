<resources>
  <style name="MyTheme" parent="android:Theme"/>
  <style name="MyTheme.Light" parent="android:Theme.Light"/>
  
  <style name="TextLarge" parent="android:TextAppearance.Large">
  </style>
  <style name="TextMedium" parent="android:TextAppearance.Medium">
  </style>
  <style name="TextMedium.Gray" parent="TextMedium">
    <item name="android:textColor">?android:attr/textColorSecondary</item>
  </style>
  <style name="TextMedium.Dark" parent="TextMedium">
    <item name="android:textColor">?android:attr/textColorTertiary</item>
  </style>
  <style name="TextMedium.Blue">
    <item name="android:textColor">@color/blueText</item>
  </style>
  <style name="TextMedium.Selectable">
    <item name="android:background">@android:drawable/list_selector_background</item>
  </style>
  <style name="TextMedium.Dark.Selectable">
    <item name="android:background">@android:drawable/list_selector_background</item>
  </style>
  <style name="TextSmall" parent="android:TextAppearance.Small">
    <item name="android:textColor">?android:attr/textColorSecondary</item>
  </style>
  <style name="TextSmall.Dark" parent="TextSmall">
    <item name="android:textColor">?android:attr/textColorTertiary</item>
  </style>
  <style name="TextSmall.Blue" parent="TextSmall">
    <item name="android:textColor">@color/blueText</item>
  </style>
  <style name="EditSection">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
  </style>
  <style name="EditLabel" parent="android:TextAppearance.Medium">
    <item name="android:paddingLeft">@dimen/text_paddingLeft</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
  </style>
  <style name="EditText" parent="android:Widget.EditText">
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:paddingLeft">@dimen/text_paddingLeft</item>
  </style>
  <style name="DialogButton" parent="TextMedium">
    <item name="android:gravity">center</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">40dp</item>
    <item name="android:minHeight">40dp</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>
  <style name="MyExpandableListView" parent="android:Widget.ExpandableListView">
    <item name="android:groupIndicator">@drawable/expander_group</item>
  </style>
  <style name="ListGroup">
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingTop">15dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:paddingLeft">0dp</item>
    <item name="android:paddingRight">0dp</item>
  </style>
  <style name="ListGroupText" parent="@style/TextMedium">
    <item name="android:textColor">@color/blueLine</item>
  </style>
  <style name="ListSeparator">
    <item name="android:paddingTop">1dp</item>
    <item name="android:paddingBottom">1dp</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">?android:attr/listDivider</item>
  </style>
  <style name="SectionSeparator">
    <item name="android:paddingTop">1dp</item>
    <item name="android:paddingBottom">1dp</item>
    <item name="android:layout_height">2dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@color/blueLine</item>
  </style>
  <style name="HLine">
    <item name="android:layout_height">2dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">?android:attr/dividerHorizontal</item>
  </style>
  <style name="HLine.Blue">
    <item name="android:background">@color/blueLine</item>
  </style>
  <style name="VLine">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">2dp</item>
    <item name="android:background">?android:attr/dividerVertical</item>
  </style>
  <style name="SelectableSection" parent="TextMedium">
    <item name="android:paddingLeft">0dp</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:background">@drawable/spinner_background_holo_dark</item>
    <item name="android:ellipsize">marquee</item>
    <item name="android:maxLines">1</item>
  </style>
</resources>